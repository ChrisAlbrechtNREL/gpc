//- Master index file for all project pages.

mixin release(proj, tag)
  a.release(href='#{gh_url}/archive/#{tag}.tar.gz')
    i.icon.icon-download.icon-large
    span.text
      h3.download Download
      h4.version #{proj}-#{tag}

doctype 5
html
  head
    title= page_title
    block head
      meta(charset='utf-8')
      meta(content='IE=edge', http-equiv='X-UA-Compatible')
    block css
      link(type='text/css', rel='stylesheet', href='css/reset.css')
      link(type='text/css', rel='stylesheet', href='//nreldev.nrel.gov/includes/fontawesome/css/font-awesome.min.css')
      link(type='text/css', rel='stylesheet', href='css/styles.css')
    block js
  body
    #viewport
      header#site-header
        .content-boundary
          .col.col1
            h1#title= site_name
            h2#tagline= site_description

          .col.col2
            a.gh-link(href='#{gh_url}')
              i.icon.icon-github.icon-large
              span.text
                | View on
                span.bold GitHub

      section#main.content-boundary
        #content.col
          block content

        #releases.col
          block releases
            - each tag in tags
              mixin release(proj_name, tag)

      footer#site-footer
        block footer
